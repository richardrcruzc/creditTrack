@model PaginatedList<CreditReport.Data.PersonalInformation.Person>

    @{
    ViewData["Title"] = "Index";

        var alerts = @ViewBag.Info as string;
    }
<div class="container">
    <p>
        <h2>Consultar persona por numero de cedula</h2>
    </p>
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading">Favor digitar el número de la cédula:</div>
            <div class="panel-body">
                <form class="navbar-form navbar-left">
                    <div class="input-group">
                        <input type="text" class="form-control" name="cedula" value="@ViewData[" currentFilter"]">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(alerts))
            {
                        <div class="alert alert-warning">
                            <strong>@ViewBag.Info</strong>
                        </div>
                    }

                </form>
                
            </div>
            </div>
    </div>
 
    </div> 
